<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:background="#F2F2F2"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="13dp"
        android:text="근무 내역"
        android:textColor="#292929"
        android:textSize="20dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="시작시간" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/st_worktime1"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:background="#fff"
            android:clickable="true"
            android:hint=" 클릭하면 시작시간이 기록됩니다."
            android:onClick="setStartWorkTime"
            android:textSize="12dp" />

        <Button
            android:id="@+id/st_worktime2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="직접등록"
            android:textSize="10dp" />
    </LinearLayout>

    <TextView
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="종료시간" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/end_worktime1"
            android:layout_width="160dp"
            android:layout_height="50dp"

            android:background="#fff"
            android:hint=" 클릭하면 종료시간이 기록됩니다."
            android:textSize="12dp" />

        <Button
            android:id="@+id/end_worktime2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="직접등록"
            android:textSize="10dp" />
    </LinearLayout>


    <Button
        android:id="@+id/insert_worktime"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:background="#FDC83E"
        android:text="완료" />
</LinearLayout>
